{
  "name": "ngx-gravatar",
  "description": "A customizable Gravatar for Angular applications.",
  "version": "17.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "prettier": "prettier --write \"**/*.{scss,ts,component.html}\"",
    "start": "ng serve",
    "build": "ng build ngx-gravatar && ng build",
    "watch": "ng build --watch --configuration development",
    "build:lib": "ng build ngx-gravatar && cp README.md CHANGELOG.md LICENSE dist/ngx-gravatar/",
    "test": "ng test ngx-gravatar --code-coverage --browsers ChromeHeadless --watch=false",
    "lint": "ng lint",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.2.2",
    "@angular/common": "^17.2.2",
    "@angular/compiler": "^17.2.2",
    "@angular/core": "^17.2.2",
    "@angular/forms": "^17.2.2",
    "@angular/platform-browser": "^17.2.2",
    "@angular/platform-browser-dynamic": "^17.2.2",
    "@angular/router": "^17.2.2",
    "rxjs": "~7.8.1",
    "ts-md5": "^1.3.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.2.1",
    "@angular-eslint/builder": "17.2.1",
    "@angular-eslint/eslint-plugin": "17.2.1",
    "@angular-eslint/eslint-plugin-template": "17.2.1",
    "@angular-eslint/schematics": "17.2.1",
    "@angular-eslint/template-parser": "17.2.1",
    "@angular/cli": "^17.2.1",
    "@angular/compiler-cli": "^17.2.2",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jasmine-core": "~5.1.2",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.2",
    "ng-packagr": "^17.2.0",
    "prettier": "^3.2.5",
    "typescript": "~5.3.3"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,scss,md,component.html}": "prettier --write"
  }
}
